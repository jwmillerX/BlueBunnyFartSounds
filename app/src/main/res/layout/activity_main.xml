<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.randomandroidapps.bluebunnyfartsounds.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bbfsmain_background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue Bunny Fart Sounds!"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/pullmyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:onClick="playRandom"
        android:text="Pull My Ear"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/thanksto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showThanks"
        android:text="Thanks To"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="403dp"
        android:layout_above="@+id/close"
        android:layout_alignRight="@+id/close"
        android:layout_alignEnd="@+id/close" />

    <Button
        android:id="@+id/close"
        android:layout_width="351dp"
        android:layout_height="45dp"
        android:onClick="closeIt"
        android:text="Close"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="451dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
